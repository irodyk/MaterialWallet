<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/cardview_card_margin"
    android:paddingEnd="@dimen/cardview_card_margin">

    <ImageView
        android:id="@+id/iv_card"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/card_details_margin_top"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/card_image"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_pan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:layout_marginTop="@dimen/card_details_margin_top_text"
        android:layout_centerVertical="true"
        android:textColor="@android:color/secondary_text_dark"/>

    <TextView
        android:id="@+id/tv_expiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:layout_below="@id/tv_pan"
        android:layout_marginTop="@dimen/card_details_margin_top_text"
        android:textColor="@android:color/secondary_text_dark"/>

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:layout_above="@id/tv_pan"
        android:textColor="@android:color/primary_text_dark"/>

    <ImageView
        android:contentDescription="@string/pull_to_open"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/image_arrow_size"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/double_arrow_up"/>

</RelativeLayout>